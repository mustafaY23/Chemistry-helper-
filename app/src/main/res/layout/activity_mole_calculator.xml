<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/molebc"
    >




    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mole Calculator"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/editMass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter mass (g)"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/editMolarMass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter molar mass (g/mol)"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#49E6D6"
        android:padding="8dp"
        android:shadowColor="#A1A0A0"
        android:text="Calculate"
        android:textColor="#FFFDFD"
        android:textColorLink="#49E6D6"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"/>

    <ListView
        android:id="@+id/listHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
